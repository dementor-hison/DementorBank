<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridView
        android:id="@+id/gvGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="5"
        android:drawingCacheQuality="low"
        android:scrollingCache="false"
        android:stretchMode="columnWidth"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        android:fadeScrollbars="false"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:listSelector="@android:color/transparent"/>

    <ImageView
        android:id="@+id/ivScrollMore"
        android:layout_width="65.5dp"
        android:layout_height="28dp"
        android:background="@drawable/d_arrow"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="15dp"/>

    <FrameLayout
        android:id="@+id/flDragIconBounds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <kr.co.dementor.dementorbank.ui.SquareImageView
            android:id="@+id/ivDrag"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="gone"/>
    </FrameLayout>

</FrameLayout>