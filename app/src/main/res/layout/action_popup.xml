<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center_horizontal"
              android:orientation="horizontal">
    <!--width:125px-->
    <ImageView
        android:id="@+id/ivActionPopupLock"
        android:layout_width="62.5dp"
        android:layout_height="match_parent"
        android:background="@drawable/hint_rock"
        android:scaleType="fitXY"/>
    <!--width:44px-->
    <ImageView
        android:id="@+id/ivActionPopupArrow1"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:background="@drawable/hint_arrow_sel"
        android:scaleType="fitXY"/>
    <!--width:125px-->
    <ImageView
        android:id="@+id/ivActionPopupKey1"
        android:layout_width="62.5dp"
        android:layout_height="match_parent"
        android:background="@drawable/hint_key01"
        android:scaleType="fitXY"/>
    <!--width:44px-->
    <ImageView
        android:id="@+id/ivActionPopupArrow2"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:background="@drawable/hint_arrow_sel"
        android:scaleType="fitXY"/>
    <!--width:125px-->
    <ImageView
        android:id="@+id/ivActionPopupKey2"
        android:layout_width="62.5dp"
        android:layout_height="match_parent"
        android:background="@drawable/hint_key02"
        android:scaleType="fitXY"/>
    <!--width:44px-->
    <ImageView
        android:id="@+id/ivActionPopupArrow3"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:background="@drawable/hint_arrow_sel"
        android:scaleType="fitXY"/>
    <!--width:125px-->
    <ImageView
        android:id="@+id/ivActionPopupKey3"
        android:layout_width="62.5dp"
        android:layout_height="match_parent"
        android:background="@drawable/hint_key03"
        android:scaleType="fitXY"/>
</LinearLayout>