<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/key_guide1"/>

    <ImageButton
        android:id="@+id/ibRegisterHelp1NeverSee"
        android:layout_width="105dp"
        android:layout_height="23.5dp"
        android:layout_gravity="bottom|left"
        android:src="@drawable/never_see_again_sel"
        android:background="@android:color/transparent"
        android:layout_marginLeft="12.5dp"
        android:layout_marginBottom="12.5dp"/>
    
    <ImageButton
        android:id="@+id/ibRegisterHelp1Close"
        android:layout_width="60.5dp"
        android:layout_height="32.5dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:scaleType="fitXY"
        android:src="@drawable/guide_btn_sel"
        android:background="@android:color/transparent"/>
</FrameLayout>